{
  "version": 2,
  "builds": [
      {
          "src": "src/server.js",
          "use": "@vercel/node"
      }
  ],
  "routes": [
      {
          "src": "/waitlist(.*)",
          "dest": "src/server.js",
          "methods": ["GET", "POST", "OPTIONS"]
      }
  ],
  "headers": [
      {
          "source": "/(.*)",
          "headers": [
              { "key": "Access-Control-Allow-Origin", "value": "https://waitlist-netmifi.vercel.app" },
              { "key": "Access-Control-Allow-Methods", "value": "GET,POST,OPTIONS" },
              { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization" }
          ]
      }
  ]
}